c_black = #2f2f69

c_bg = #685B87

*, *:before, *:after
	box-sizing: border-box

html
	font-family: Arial, "Helvetica Neue", Helvetica, sans-serif

body
	margin: 0
	background-color: c_bg
	color: white
	overflow: hidden
	font-size: 0 // NOTE(bret): Set to 0 so we don't get any odd zooming on mobile on page load (trust me here, remove it and watch everything fall apart)

absoluteCenter()
	position: absolute
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)

header
	text-align: center

.board, .words
	top: 0

.board
	position: absolute
	line-height: 0
	background-color: c_black
	padding: 1.5em

.words
	position: fixed
	width: 100%
	height: 100%
	line-height: 0
	overflow: hidden
	.words-holder
		background-color: #8b6914
		width: 100%
		height: 100%
		overflow-y: scroll
		padding-right: calc(18px + 1.5em)
		box-sizing: content-box
		margin-left: -1.5em
		.word
			margin: 3em

.word
	position: relative
	display: block
	// NOTE(bret): A hack to prevent the block from having 100% width
	float: left
	clear: left
	line-height: 1em
	.tile
		pointer-events: none
	&.drag, &.on-grid
		position: absolute
		z-index: 5
		.buttons
			display: none
	&.rotated .tile
		display: block
	.buttons
		position: absolute
		right: 0
		top: 50%
		transform: translate(100%, -50%)
		z-index: 6
		white-space: nowrap
		.button
			position: relative
			display: inline-block
			height: 10em
			margin: 0 0.5em
			cursor: grab
			&::after
				content: ''
				width: 100%
				display: block
				position: relative
				border-radius: 1.2em
				background-color: #fafafa
		.horizontal
			width: 10em
			&::after
				height: 50%
				top: 25%
		.vertical
			width: 5em
			&::after
				height: 100%

.tile
	position: relative
	display: inline-block
	.background
		position: absolute
		left: 5%
		top: 5%
		width: 90%
		height: 90%
		border-radius: 15%
		background-color: #a1a1a1
		opacity: 0.3
		.word-hovering&
			background-color: green
		.has-letter&
			background-color: #deb887
			opacity: 0.7
			.word-hovering&
				background-color: red
		.test&
			background-color: purple
	.letter
		absoluteCenter()
		font-size: 4em
		text-transform: uppercase
		&::after
			content: attr(data-letter)
