c_black = #0f0f23
c_slightly_black = #1f1f46

c_bg = #685B87

*, *:before, *:after
	box-sizing: border-box

html
	font-family: Arial, "Helvetica Neue", Helvetica, sans-serif

body
	margin: 0
	background-color: c_bg
	color: white
	font-size: 0 // NOTE(bret): Set to 0 so we don't get any odd zooming on mobile on page load (trust me here, remove it and watch everything fall apart)

absoluteCenter()
	position: absolute
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)

header
	text-align: center

.board
	position: absolute
	line-height: 0
	background-color: c_black
	background-color: #e3e3e3
	padding: 1.5em

.words
	position: fixed
	width: 100%
	height: 100%
	line-height: 0
	overflow: hidden
	.words-holder
		background-color: #8b6914
		width: 100%
		height: 100%
		overflow-y: scroll
		padding-right: calc(18px + 1.5em)
		box-sizing: content-box
		margin-left: -1.5em
		.word
			display: inline-block
			cursor: move
			line-height: 1em
			margin: 3em

.tile
	position: relative
	display: inline-block
	.background
		position: absolute
		left: 5%
		top: 5%
		width: 90%
		height: 90%
		border-radius: 15%
		background-color: white
		background-color: #333
		opacity: 0.3
		^[0].has-letter ^[1..-1]
			background-color: #deb887
			opacity: 0.7
	.letter
		absoluteCenter()
		font-size: 4em
		text-transform: uppercase
		&::after
			content: attr(data-letter)
